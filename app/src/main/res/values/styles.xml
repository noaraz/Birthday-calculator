<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Text">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Title">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/lightBlue</item>
    </style>

    <style name="Text.SubTitle">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/lightBlue</item>

    </style>

    <style name="Text.Field">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/lightBlue</item>

    </style>

    <style name="Text.Field.Small">
        <item name="android:textSize">@dimen/font_smaller</item>
    </style>

    <style name="Text.EditText">
        <item name="android:textSize">@dimen/font_smaller</item>

    </style>

    <style name="Text.ListItem">
        <item name="android:textSize">@dimen/font_smaller</item>
    </style>

    <style name="CardView.Section">
        <item name="android:layout_margin">@dimen/spacing_small</item>
        <item name="cardCornerRadius">@dimen/radius_small</item>
    </style>

    <style name="CardView.Section.Clickable">
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="Button">
        <item name="android:gravity">center</item>
    </style>

    <style name="Button.Text">
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="Image">
        <item name="android:padding">@dimen/spacing_smaller</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="Line">
        <item name="android:layout_margin">@dimen/spacing_smaller</item>
    </style>

    <style name="Line.LightBlue">
        <item name="android:background">@drawable/horizontal_light_blue_line</item>
    </style>


    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:itemBackground">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
